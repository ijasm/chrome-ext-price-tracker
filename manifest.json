{
    "manifest_version": 2,
    "name": "Sales Monitor",
    "version": "1.0",
    "description": "Monitor product pages for sales!",
    "icons": {
        "128": "images/icon_unchecked_128.png",
        "48": "images/icon_unchecked_48.png",
        "16": "images/icon_unchecked_16.png"
    },
    "page_action": {
        "default_title": "Sales Monitor",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "exclude_globs": [
                "*google.com*",
                "*facebook.com*",
                "*youtube.com*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ]
}