{
    "extends": [
        "tslint:recommended",
        "tslint-react"
    ],
    "jsRules": {
        "indent": [true, "tabs"],
        "no-empty": false,
        "ordered-imports": [false],
        "object-literal-sort-keys": false,
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ]
    },
    "rules": {
        "semicolon": [true, "always"],
        "indent": [true],
        "class-name": true,
        "variable-name": ["ban-keywords", "check-format"],
        "ordered-imports": [false],
        "member-ordering": [false],
        "object-literal-sort-keys": false,
        "max-line-length": [false],
        "no-namespace": [false],
        "no-var-requires": false,
        "interface-name": [false],
        "member-access": ["check-accessor"]
    },
    "rulesDirectory": []
}